{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "redirects": [
    { "source": "/", "destination": "/access-denied.html", "permanent": false },
    { "source": "/app", "destination": "/index.html", "permanent": false }
  ],
  "rewrites": [
    { "source": "/access-denied", "destination": "/access-denied.html" },
    { "source": "/about", "destination": "/about.html" },
    { "source": "/browse", "destination": "/directory-listing.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 