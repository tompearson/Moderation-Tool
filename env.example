# Community Moderation Tool Environment Variables
# Copy this file to .env and fill in your actual values

# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration (optional)
PORT=3000

# Environment (optional)
NODE_ENV=development

# Guidelines URL (optional)
# Set to 'embedded' to use built-in rules only
# Set to a URL to fetch rules from external source
GUIDELINES_URL=https://help.nextdoor.com/s/article/community-guidelines?language=en_GB 